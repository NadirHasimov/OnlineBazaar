@using OnlineBazaar.Resources
@using System.ComponentModel.DataAnnotations
@model OnlineBazaar.Models.CategoryViewModel

@section Styles{
    <link href="~/Content/custom/css/categories.css" rel="stylesheet" />
}
@section Scripts{
}
@{
    string pageTittle = OnlineBazaarResources.EditCategoryPageTittle,
           panelTittle = OnlineBazaarResources.EditCategoryPanelTittle,
           btnText = OnlineBazaarResources.CategoryEditViewBtn;
    if (Model.ID == 0)
    {
        pageTittle = OnlineBazaarResources.CreateCategoryPageTittle;
        panelTittle = OnlineBazaarResources.CreateCategoryPanelTittle;
        btnText = OnlineBazaarResources.CategoryCreateViewBtn;
    }

    ViewBag.Title = pageTittle;
}
<div class="row edit-page">
    <div class="panel panel-default col-md-6">
        <div class="panel-heading">
            <div class="panel-title">
                @panelTittle
            </div>
        </div>
        @using (Html.BeginForm("Edit", "Category", FormMethod.Post, Model))
        {
            <div class="panel-body">
                @Html.TextBoxFor(Model => Model.ID, new { style = "display:none" })
                <div class="form-group pt20">
                    <label class="col-md-3 col-xs-12 control-label align-right pt7">Name</label>
                    <div class="col-md-6">
                        <div class="input-group">
                            @Html.EditorFor(Model => Model.Name)
                        </div>@*<span class="help-block">Name field sample</span>*@<span>@Html.ValidationMessageFor(x => x.Name)</span>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group pt20">
                    <label class="col-md-3 col-xs-12 control-label align-right pt7">Parent ID</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            @Html.DropDownListFor(m => m.ParentID, Model.ParentCategories, Model.ParentID)
                            @*@Html.DropDownList("ParentCategories","Select parent")*@
                        </div>@*<span class="help-block">Parent ID field sample</span>*@<span>@Html.ValidationMessageFor(x => x.ParentID)</span>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group pt20">
                    <label class="col-md-3 col-xs-12 control-label align-right pt7">Display order</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            @Html.EditorFor(Model => Model.DisplayOrder)
                        </div>@*<span class="help-block">Display order field sample</span>*@<span>@Html.ValidationMessageFor(x => x.DisplayOrder)</span>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="form-group pt20">
                    <label class="col-md-3 col-xs-12 control-label align-right pt7">Description</label>
                    <div class="col-md-6 col-xs-12">
                        <div class="input-group">
                            @Html.TextAreaFor(Model => Model.Description)
                        </div>@*<span class="help-block">Description field sample</span>*@<span>@Html.ValidationMessageFor(x => x.Description)</span>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="pull-left">
                    <button type="submit" id="submit" name="btnSubmit" class="btn btn-green">
                        <i class="entypo-doc-text"></i>
                        @btnText
                    </button>
                </div>
                <div class="pull-right">
                    @Html.ActionLink("Cancel", "Index", "Category")
                </div>
            </div>
        }
    </div>
</div>
