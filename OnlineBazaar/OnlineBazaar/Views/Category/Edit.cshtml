@using OnlineBazaar.Resources
@using System.ComponentModel.DataAnnotations
@model OnlineBazaar.Models.CategoryViewModel

@section Styles{
    <link href="~/Content/custom/css/categories.css" rel="stylesheet" />
    <link href="~/Content/theme/css/select2.css" rel="stylesheet" />
    <link href="~/Content/theme/css/select2.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/Scripts/theme/select2.min.js"></script>
    <script src="~/Scripts/custom/category-edit.js"></script>
}
@{
    string pageTittle = OnlineBazaarResources.EditCategoryPageTittle,
           panelTittle = OnlineBazaarResources.EditCategoryPanelTittle,
           btnText = OnlineBazaarResources.CategoryEditViewBtn;
    if (Model.ID == 0)
    {
        pageTittle = OnlineBazaarResources.CreateCategoryPageTittle;
        panelTittle = OnlineBazaarResources.CreateCategoryPanelTittle;
        btnText = OnlineBazaarResources.CategoryCreateViewBtn;
    }

    ViewBag.Title = pageTittle;
}
<div class="row edit-page">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class=" panel-heading">
                <div class="panel-title">
                    @panelTittle
                </div>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, Model))
                {
                    @Html.TextBoxFor(model => model.ID, new { style = "display:none" })
                    <div class="form-group">
                        <label class="control-label">Parent</label>
                        @Html.DropDownListFor(model => model.ParentID, Model.ParentCategories, new { @class = "form-control", @id = "parentList" })
                        <span>@Html.ValidationMessageFor(model => model.ParentID)</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        <span>@Html.ValidationMessageFor(model => model.Name)</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Display order</label>
                        @Html.EditorFor(model => model.DisplayOrder, new { htmlattributes = new { @class = "form-control", @id = "displayOrder" } })
                        <span>@Html.ValidationMessageFor(model => model.DisplayOrder)</span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Description</label>
                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control autogrow" })
                    </div>
                    <div class="pull-right">
                        <button type="submit" id="submit" name="btnSubmit" class="btn btn-green">
                            <i class="entypo-doc-text"></i>
                            @btnText
                        </button>
                    </div>
                    <div class="pull-left">
                        @Html.ActionLink("Cancel", "Index", "Category")
                    </div>
                }
            </div>
        </div>
    </div>
</div>